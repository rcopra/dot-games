</div>

<div class="wrapper">
  <div class="sidebar">
    <ul>
     <%= link_to "Back to games", games_path %>
     <%= link_to "Destroy this game", @game, method: :delete %>
    </ul>
  </div>
<div class="content">
<div class="show-card">    <img class="show-card__img" src="https://cdn1.epicgames.com/salesEvent/salesEvent/EGS_WolfensteinTheNewOrder_MachineGames_S1_2560x1440-3a75b2c45a2a12e882feb2e2ff180b0c" alt="mario">
  <div id="<%= dom_id @game %>">
    <div class="show-card-info">
      <h6>Title:</h6>
      <p><%= @game.name %></p>
      <h6>Description:</h6>
      <p><%= @game.description %></p>
      <h6>Price:</h6>
      <p><%= @game.price %></p>
    </div>
    <%#= cl_image_tag @game.photo.key, height: 300, crop: :fill %>
  </div>
  <div class="container">
    <div data-controller="toggle" class="my-5">
      <button class="btn btn-primary" data-action="click->toggle#fire">Book a game</button>
       <div data-toggle-target="togglableElement" class="d-none">
        <%= simple_form_for [@game, @booking] do |f| %>
          <%= f.input :start_date, as: :string, input_html: { data: { controller: 'datepicker' } } %>
          <%= f.input :end_date, as: :string, input_html: { data: { controller: 'datepicker' } } %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
  </div>
  <%# <div class="footer">Footer</div> %>
</div>
